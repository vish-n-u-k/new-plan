{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "zod_patch.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["moduleId", "contractVersion", "schemas"],
  "properties": {
    "moduleId": { "type": "string", "minLength": 1 },
    "contractVersion": { "type": "string", "pattern": "^v\\d+\\.\\d+\\.\\d+$" },
    "schemas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["schemaId", "purpose", "targetFile", "definition", "usedBy"],
        "properties": {
          "schemaId": { "type": "string", "pattern": "^[A-Za-z][A-Za-z0-9_]*$" },
          "purpose": { "enum": ["request", "response", "error", "query"] },
          "targetFile": { "type": "string", "pattern": "^src/schemas/.+\\.schema\\.ts$" },
          "definition": { "type": "string", "minLength": 5 },
          "usedBy": { "type": "array", "items": { "type": "string" }, "minItems": 1 }
        }
      }
    }
  }
}